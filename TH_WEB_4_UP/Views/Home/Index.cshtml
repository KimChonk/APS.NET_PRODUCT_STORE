@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #2962ff, #0039cb);
        border-radius: 20px;
        padding: 4rem 2rem;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(41,98,255,0.2);
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 400px;
        height: 400px;
        background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
        border-radius: 50%;
        transform: translate(200px, -200px);
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: rgba(255,255,255,0.9);
        margin-bottom: 2rem;
    }

    .hero-button {
        background: white;
        color: #2962ff;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .hero-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        color: #2962ff;
    }

    .products-section {
        padding: 2rem 0;
    }

    .section-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #1d1d1f;
        margin-bottom: 2rem;
        text-align: center;
        position: relative;
        padding-bottom: 1rem;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, #2962ff, #0039cb);
        border-radius: 2px;
    }

    .product-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .product-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .product-content {
        padding: 1.5rem;
    }

    .product-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #1d1d1f;
        margin-bottom: 0.5rem;
    }

    .product-description {
        color: #666;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .product-button {
        background: linear-gradient(135deg, #2962ff, #0039cb);
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        border: none;
        width: 100%;
        text-align: center;
    }

    .product-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(41,98,255,0.3);
        color: white;
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-section {
            padding: 3rem 1.5rem;
        }

        .product-card {
            margin-bottom: 2rem;
        }
    }
</style>

<div class="hero-section text-center">
    <h1 class="hero-title">Welcome to Trọng Trần Store</h1>
    <p class="hero-subtitle">Khám phá các sản phẩm công nghệ hàng đầu với chất lượng tốt nhất</p>
    <a href="#products" class="hero-button">Khám phá ngay</a>
</div>

<section id="products" class="products-section">
    <h2 class="section-title">Sản phẩm nổi bật</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="product-card">
                <img src="~/images/legion9i.jpg" alt="Legion 9i" class="product-image">
                <div class="product-content">
                    <h3 class="product-title">Legion 9i</h3>
                    <p class="product-description">Laptop gaming hiệu năng cao với công nghệ tiên tiến.</p>
                    <a href="/Product/Details/1" class="product-button">Tìm hiểu thêm</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="product-card">
                <img src="~/images/aus_tuf_screen.jpg" alt="ASUS TUF VG249Q3A" class="product-image">
                <div class="product-content">
                    <h3 class="product-title">ASUS TUF VG249Q3A</h3>
                    <p class="product-description">Màn hình gaming với tần số quét cao và màu sắc sống động.</p>
                    <a href="/Product/Details/2" class="product-button">Tìm hiểu thêm</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="product-card">
                <img src="~/images/dell_alien_ware.jpg" alt="Dell Alienware" class="product-image">
                <div class="product-content">
                    <h3 class="product-title">Dell Alienware</h3>
                    <p class="product-description">Laptop gaming cao cấp với hệ thống làm mát tiên tiến.</p>
                    <a href="/Product/Details/3" class="product-button">Tìm hiểu thêm</a>
                </div>
            </div>
        </div>
    </div>
</section>

